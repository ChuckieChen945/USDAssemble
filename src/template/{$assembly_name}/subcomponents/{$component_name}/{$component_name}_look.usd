#usda 1.0
(
    defaultPrim = "${component_name}"
    metersPerUnit = 1
    upAxis = "Y"
)

over "${component_name}"
{
    def Scope "Materials" (
        prepend references = @./${component_name}_mat.mtlx@</MaterialX/Materials>
    )
    {
    }

    over "Geom"
    {
        over "Render" (
            apiSchemas = ["MaterialBindingAPI"]
        )
        {
            rel material:binding = </${component_name}/Materials/M_${component_name}>
        }
    }
}
